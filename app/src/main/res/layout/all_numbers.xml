<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/number_display"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/firstnumber"
        layout="@layout/number_display"
        app:layout_constraintRight_toLeftOf="@id/secondnumber"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        />
    <include
        android:id="@+id/secondnumber"
        layout="@layout/number_display"
        app:layout_constraintLeft_toRightOf="@id/firstnumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/divider_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/double_point"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@id/secondnumber"
        app:layout_constraintTop_toTopOf="parent" />
    <include
        android:id="@+id/thirdnumber"
        layout="@layout/number_display"
        app:layout_constraintLeft_toRightOf="@id/divider_one"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        />
    <include
        android:id="@+id/fourthnumber"
        layout="@layout/number_display"
        app:layout_constraintLeft_toRightOf="@id/thirdnumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/divider_two"
        layout="@layout/number_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/double_point"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@id/fourthnumber"
        app:layout_constraintTop_toTopOf="parent" />
    <include
        android:id="@+id/fifthnumber"
        layout="@layout/number_display"
        app:layout_constraintLeft_toRightOf="@id/divider_two"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        />
    <include
        android:id="@+id/sixthnumber"
        layout="@layout/number_display"
        app:layout_constraintLeft_toRightOf="@id/fifthnumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>