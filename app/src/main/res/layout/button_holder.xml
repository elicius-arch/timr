<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/number_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:clickable="true"
        android:backgroundTint="@color/red"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_margin="5dp"
         />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/red"
        app:srcCompat="@android:drawable/ic_media_pause"
        app:layout_constraintLeft_toRightOf="@id/button_play"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/red"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_stop"
        android:layout_margin="5dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/red"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_end"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>